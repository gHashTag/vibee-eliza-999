####################################
#### Server Configuration ####
####################################

# Server Port
SERVER_PORT=3000

# Server Host (default: 0.0.0.0)
SERVER_HOST=0.0.0.0

# Environment Mode (development/production - affects UI and security)
NODE_ENV=development

# Controls whether the web UI is available
# Set to "true" to force enable, "false" to force disable, or leave unset for automatic behavior
# Default: enabled in development, disabled in production
ELIZA_UI_ENABLE=true

# Server authentication token for API access
# When set, all /api/* routes require X-API-KEY header with this value
VIBEE_SERVER_AUTH_TOKEN=

# Express Maximum Payload Size (default: 2mb)
EXPRESS_MAX_PAYLOAD=2mb

####################################
#### Database Configuration ####
####################################

# PostgreSQL Connection URL (optional - PGLite used by default for development)
# POSTGRES_URL=postgresql://user:password@localhost:5432/database_name

# PGLite Database Directory (or use memory:// for in-memory)
# Alternative to Postgres - DEFAULT: uses in-memory or .eliza directory
PGLITE_DATA_DIR=

####################################
#### AI Model Provider APIs ####
####################################

# OpenAI API Key (from https://platform.openai.com/api-keys)
OPENAI_API_KEY=

# Google Generative AI API Key
GOOGLE_GENERATIVE_AI_API_KEY=

# Anthropic Claude API Key (Embedding Provider required; will default to local embedding if not provided)
ANTHROPIC_API_KEY=

# OpenRouter API Key (Embedding Provider required; will default to local embedding if not provided)
# Get free key at https://openrouter.ai/keys (free tier available!)
OPENROUTER_API_KEY=

# Ollama API Endpoint (for local LLM hosting, supports embedding)
OLLAMA_API_ENDPOINT=

####################################
#### Character & Content Loading ####
####################################

# Remote Character URLs (comma-separated)
REMOTE_CHARACTER_URLS=

####################################
#### Development & Build Control ####
####################################

# Non-interactive CLI Mode (true/false)
ELIZA_NONINTERACTIVE=false

####################################
#### Data Directory Configuration ####
####################################

# Base data directory (default: .eliza)
# ELIZA_DATA_DIR=.eliza

# Database directory (default: {ELIZA_DATA_DIR}/.elizadb)
# ELIZA_DATABASE_DIR=

# Characters storage directory (default: {ELIZA_DATA_DIR}/data/characters)
# ELIZA_DATA_DIR_CHARACTERS=

# AI-generated content directory (default: {ELIZA_DATA_DIR}/data/generated)
# ELIZA_DATA_DIR_GENERATED=

# Agent uploads directory (default: {ELIZA_DATA_DIR}/data/uploads/agents)
# ELIZA_DATA_DIR_UPLOADS_AGENTS=

# Channel uploads directory (default: {ELIZA_DATA_DIR}/data/uploads/channels)
# ELIZA_DATA_DIR_UPLOADS_CHANNELS=

####################################
#### Telegram Configuration ####
####################################

# Telegram Bot Token (from @BotFather - https://t.me/BotFather)
TELEGRAM_BOT_TOKEN=

# Telegram Bot ID (numeric ID from @userinfobot)
TELEGRAM_BOT_ID=

# Telegram API Credentials for MTProto (from https://my.telegram.org)
TELEGRAM_API_ID=
TELEGRAM_API_HASH=

####################################
#### Infisical Cloud Configuration ####
####################################

# Infisical Cloud (for secrets - get from Infisical Dashboard)
# All API keys and secrets are loaded from Infisical cloud at runtime
INFISICAL_CLIENT_ID=88fcf0cd-cce9-4844-bad2-8e19b4bad3ed
INFISICAL_CLIENT_SECRET=b377e7a60b669ea2317f339dc6cb79ce49d588a7bbed92433bb2a73dedff3314
INFISICAL_PROJECT_ID=fd763fa3-35d5-4045-93bd-1795c5f00fc3
INFISICAL_ENVIRONMENT=dev

####################################
#### Security & JWT ####
####################################

# JWT Secret (генерируется автоматически если не указан)
SECRET_SALT=

####################################
#### Logging & Monitoring ####
####################################

# Logging Level - enable debug logs for development
LOG_LEVEL=debug

# Enable telemetry (optional)
ELIZA_TELEMETRY=false

####################################
#### Plugin Control ####
####################################

# Skip loading the bootstrap plugin (any value)
# Do not change if you are not customizing bootstrap with another plugin
IGNORE_BOOTSTRAP=

# TEMPORARY: Skip SQL migrations due to plugin-sql introspection bug
# TODO: Remove this when the introspection bug is fixed
SKIP_MIGRATIONS=true
