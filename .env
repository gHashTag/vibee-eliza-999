# PostgreSQL Database
POSTGRES_URL=postgresql://user:password@localhost:5432/database_name

# Telegram Bot Token и Bot ID (получите от @BotFather в Telegram)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_BOT_ID=your_bot_id_here

# Infisical Cloud (для секретов - получите из Infisical Dashboard)
INFISICAL_CLIENT_ID=your_infisical_client_id
INFISICAL_CLIENT_SECRET=your_infisical_client_secret
INFISICAL_PROJECT_ID=your_infisical_project_id
INFISICAL_ENVIRONMENT=dev

# JWT Secret (генерируется автоматически если не указан)
SECRET_SALT=your_jwt_secret_here_change_in_production

# Logging Level - enable debug logs for development
LOG_LEVEL=debug

# TEMPORARY: Skip SQL migrations due to plugin-sql introspection bug
# TODO: Remove this when the introspection bug is fixed
SKIP_MIGRATIONS=true

# Enable telemetry (optional)
ELIZA_TELEMETRY=false
