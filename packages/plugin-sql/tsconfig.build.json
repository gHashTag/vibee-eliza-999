{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/browser",
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "noEmit": false
  },
  "include": [
    "src/index.browser.ts",
    "src/schema/**/*.ts",
    "src/types.ts",
    "src/utils.browser.ts"
  ],
  "exclude": ["node_modules", "dist", "src/**/__tests__/**", "src/**/*.test.ts", "src/**/*.spec.ts"]
}
