{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node", "bun"]
  },
  "include": [
    "src/index.ts",
    "src/loader.ts",
    "src/services/infisicalSecretLoader.ts",
    "src/services/environmentValidator.ts",
    "src/database-init.ts",
    "src/defaultServerCreator.ts",
    "src/entrypoint.ts",
    "src/api/**/*"
  ],
  "exclude": ["node_modules", "dist", "src/services/startupHealthCheck.ts"]
}
