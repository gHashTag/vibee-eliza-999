{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node", "uuid"]
  },
  "include": ["src/entrypoint.ts", "src/services/infisicalSecretLoader.ts"],
  "exclude": ["node_modules", "dist", "src/services/startupHealthCheck.ts", "src/index.ts"]
}
